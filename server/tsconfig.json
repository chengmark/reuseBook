{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "allowJs": true,
    "noImplicitAny": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
